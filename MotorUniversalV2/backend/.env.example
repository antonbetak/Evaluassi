# Flask
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/evaluaasi_v2
# O para desarrollo local:
# DATABASE_URL=sqlite:///app.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=evaluaasi-files

# Azure Key Vault (opcional, para producción)
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutos
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 días

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf

# Email (para notificaciones futuras)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
